<%= form_for @spektakl, html: { class: 'form-horizontal' } do |f| %>
 
	<label>Tytuł</label>
		<div class="form-group">
		<div class="col-md-10">
		<%= f.text_field :tytul, class: 'text_field form-control' %>
		</div>
		 </div>
  <label>Reżyser</label>
		<div class="form-group">
		<div class="col-md-10">
		<%= f.text_field :rezyser, class: 'text_field form-control' %>
  </div>
   </div>
   <label>Premiera</label>
		<div class="form-group">
		<div class="col-md-10">
		<%= f.datetime_select :premiera, class: 'datetime_select form-control' %>
  </div>
   </div>

  
     <div class='col-md-offset-2'>
      <%= f.submit "Zatwierdź", class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("Powrót do listy spektakli")),
                  spektakls_path, class: 'btn btn-default' %>
    </div>

<% end %>
